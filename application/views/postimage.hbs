<body>
    <form id="post-image" method="POST" enctype="multipart/form-data" action='/posts/createPost'>
        <label for="post_title">Title:</label>
        <input type="text" id="post-title" name="title" required>
        <br>

        <label for="post_description">Description:</label>
        <input type="text" id="post-desc" name="description" required>
        <br>

        <label for="image">Image:</label>
        <input type="file" id="image-select" name="uploadImage" required>
        <br>

        <input type="checkbox" id="use-policy" name="use-policy" required>
        <label for="use-policy">I accept Acceptable Use Policy for uploading images.</label>
        <br>

        <input type="submit" value="Submit">
    </form>
</body>