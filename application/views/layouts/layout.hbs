<!DOCTYPE html>
<html>
<head>
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="/public/css/form.css">
    <script defer src="../public/js/frontendjs.js"></script>"
</head>
  <body>
    {{log this}}
    {{> banner}}
    {{#if (emptyObject messages)}}
    {{> flashmessage}}
    {{/if}}
    {{> nav}}
    {{{body}}}

    {{#if logged}}
      <script>
        let ele = document.getElementById('logout-button');
        if(ele) {
          ele.onclick = (event) => {
            fetch('/users/logout', {
              method: "POST"
            })
            .then((data) => {
              location.replace('/');
            })
          }
        }
      </script>
    {{/if}}
  </body>
</html>
